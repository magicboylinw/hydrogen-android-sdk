<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context=".MainActivity">

    <TextView android:id="@+id/tipTv" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/sendWxOrderBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="发起微信支付（0.01）"/>

    <TextView android:id="@+id/infoTv" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>